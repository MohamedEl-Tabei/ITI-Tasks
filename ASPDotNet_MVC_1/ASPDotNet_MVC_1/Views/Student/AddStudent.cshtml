@model AddStudentDTO
<form class="container w-50 p-4 shadow d-flex flex-column" asp-action="AddStudent" method="post">
	<div class="mb-3">
		<label asp-for="Name" class="form-label">Name</label>
		<input class="form-control" asp-for="Name" />
		<span class="text-danger " asp-validation-for="Name"></span>
	</div>
	<div class="mb-3">
		<label asp-for="Email" class="form-label">Email</label>
		<input class="form-control" asp-for="Email" />
		<span class="text-danger " asp-validation-for="Email"></span>
	</div>
	<div class="mb-3">
		<label asp-for="Department" class="form-label">Department</label>
		<input class="form-control" asp-for="Department" />
		<span class="text-danger " asp-validation-for="Department"></span>
	</div>


	<button class="btn btn-success mx-auto px-5">Add Student</button>
</form>
@section Scripts {
	<partial name="_validationscriptspartial" />
}